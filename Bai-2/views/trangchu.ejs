<html>
    <head>
        <title>Demo Socket IO</title>
        <script src="jquery.js"></script>
        <script src="socket.io/socket.io.js"></script>
        <script>
            // goi dien len server
            var socket = io("http://localhost:3000");
            socket.on('SERVER-SEND-MAU', function(data){
                $('body').attr('bgColor',data)
            })
            $(document).ready(function(){
                $("do").click(function(){
                    socket.emit("CLIENT-SEND-MAU","red");
                });
                $("xanh").click(function(){
                    socket.emit("CLIENT-SEND-MAU","blue");
                });
                $("vang").click(function(){
                    socket.emit("CLIENT-SEND-MAU","yellow");
                });
            });
        </script>
        <style>
            #do, #xanh, #vang{
                width:300px;
                height: 70px;
                }
            #do{background-color: red}
            #xanh{background-color: blue}
            #vang{background-color: yellow}
        </style>
    </head>

    <body bgColor="pink">
        
        <div id="do"></div>
        <div id="xanh"></div>
        <div id="vang"></div>
    </body>
</html>